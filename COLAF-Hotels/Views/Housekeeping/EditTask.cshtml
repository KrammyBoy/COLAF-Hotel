@model COLAFHotel.Models.HousekeepingTask
@{
    ViewBag.Title = "Edit Housekeeping Task";
}

<div class="max-w-2xl mx-auto p-6 bg-white shadow-lg rounded-lg">
    <h2 class="text-2xl font-semibold text-coffee-dark mb-4">Edit Housekeeping Task</h2>

    <form asp-action="EditTask" method="post">
        <input type="hidden" asp-for="task_id" />

        <div class="mb-4">
            <label asp-for="room_id" class="block text-coffee-medium mb-2">Room Number</label>
            <select asp-for="room_id" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-coffee-accent"
                    asp-items="ViewBag.Rooms">
                <option value="">-- Select Room --</option>
            </select>
            <span asp-validation-for="room_id" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="task_type" class="block text-coffee-medium mb-2">Task Type</label>
            <select asp-for="task_type" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-coffee-accent">
                <option value="Room Cleaning">Room Cleaning</option>
                <option value="Facility Maintenance">Facility Maintenance</option>
                <option value="Linen Change">Linen Change</option>
                <option value="Restocking">Restocking</option>
                <option value="Deep Cleaning">Deep Cleaning</option>
                <option value="Special Request">Special Request</option>
            </select>
            <span asp-validation-for="task_type" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="description" class="block text-coffee-medium mb-2">Description</label>
            <textarea asp-for="description" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-coffee-accent" rows="3"></textarea>
            <span asp-validation-for="description" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="status" class="block text-coffee-medium mb-2">Status</label>
            <select asp-for="status" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-coffee-accent">
                <option value="Pending">Pending</option>
                <option value="In Progress">In Progress</option>
                <option value="Completed">Completed</option>
            </select>
            <span asp-validation-for="status" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="assigned_to" class="block text-coffee-medium mb-2">Assign To</label>
            <select asp-for="assigned_to" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-coffee-accent"
                    asp-items="ViewBag.Staff">
                <option value="">-- Unassigned --</option>
            </select>
            <span asp-validation-for="assigned_to" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex justify-between mt-6">
            <a asp-action="Tasks" class="bg-gray-300 text-coffee-dark py-2 px-4 rounded-lg hover:bg-gray-400 transition">Cancel</a>
            <button type="submit" class="bg-coffee-accent text-white py-2 px-4 rounded-lg hover:bg-coffee-medium transition">Save Changes</button>
        </div>
    </form>
</div>