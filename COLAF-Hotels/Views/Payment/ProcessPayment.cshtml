@model COLAFHotel.Models.Payment
@{
    ViewBag.Title = "Process Payment";
}
<h2>Process Payment</h2>
<form asp-action="ProcessPayment" method="post">
    <div class="form-group">
        <label>Payment Method:</label>
        <select asp-for="PaymentMethod" class="form-control">
            <option value="Credit Card">Credit Card</option>
            <option value="Debit Card">Debit Card</option>
            <option value="Online Wallet">Online Wallet</option>
            <option value="Bank Transfer">Bank Transfer</option>
        </select>
    </div>
    <div class="form-group">
        <label>Amount:</label>
        <input type="number" step="0.01" asp-for="Amount" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Pay</button>
</form>
