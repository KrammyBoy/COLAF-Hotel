@model COLAFHotel.Models.Payment
@{
    ViewBag.Title = "Payment Confirmation";
}

<div class="container mx-auto p-6 bg-coffee-cream bg-opacity-10">
    <div class="mb-8">
        <h3 class="text-2xl font-serif font-bold text-coffee-dark inline-block relative">
            <span class="relative z-10">Payment Confirmation</span>
            <span class="absolute bottom-0 left-0 w-full h-2 bg-coffee-accent bg-opacity-40 -z-0"></span>
        </h3>
    </div>

    <div class="bg-white shadow-lg rounded-lg p-6 mb-6 border border-coffee-cream">
        <div class="flex items-center justify-center mb-6">
            <div class="h-16 w-16 bg-green-100 rounded-full flex items-center justify-center">
                <svg class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
            </div>
        </div>

        <h4 class="text-xl font-bold text-center text-coffee-dark mb-4">Payment Successful!</h4>

        <p class="text-center text-coffee-medium mb-6">@ViewBag.Message</p>

        <div class="bg-gray-50 p-4 rounded-lg mb-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <p class="text-sm text-gray-600">Payment Method</p>
                    <p class="font-medium text-coffee-dark">@Model.payment_method</p>
                </div>
                <div>
                    <p class="text-sm text-gray-600">Amount Paid</p>
                    <p class="font-medium text-coffee-dark">₱ @Model.amount.ToString("0.00")</p>
                </div>
                <div>
                    <p class="text-sm text-gray-600">Booking ID</p>
                    <p class="font-medium text-coffee-dark">#@Model.booking_id</p>
                </div>
                <div>
                    <p class="text-sm text-gray-600">Date & Time</p>
                    <p class="font-medium text-coffee-dark">@DateTime.Now.ToString("MMM dd, yyyy hh:mm tt")</p>
                </div>
            </div>
        </div>

        <div class="flex justify-center">
            <a href="@Url.Action("CompletePaymentProcess", "Payment", new { bookingId = Model.booking_id, returnUrl = ViewBag.ReturnUrl })" class="px-6 py-3 bg-coffee-accent hover:bg-coffee-dark text-white font-medium rounded-md transition-colors duration-200">
                Continue Process
            </a>
        </div>
    </div>

    <div class="text-center">
        <button onclick="window.print()" class="text-coffee-medium hover:text-coffee-dark underline transition-colors duration-150 flex items-center justify-center mx-auto">
            <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
            </svg>
            Print Receipt
        </button>
    </div>
</div>