@model COLAFHotel.Models.Guest
@{
    ViewBag.Title = "Guest Profile";
}

<div class="max-w-lg mx-auto p-6 bg-white shadow-lg rounded-lg">
    <h2 class="text-3xl font-semibold text-[var(--primary-color)] mb-4">Guest Profile</h2>

    <div class="space-y-3">
        <p class="text-lg"><strong>Name:</strong> @Model.user_id</p>
        <p class="text-lg"><strong>Email:</strong> @Model.guest_id</p>
        <p class="text-lg"><strong>Phone:</strong> @Model.phone</p>
    </div>
</div>
