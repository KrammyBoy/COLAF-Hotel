@model COLAFHotel.Controllers.GuestDetailsViewModel
@{
    ViewData["Title"] = "Guest Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto p-6 bg-coffee-cream bg-opacity-10">
    <!-- Page Header -->
    <div class="mb-8 flex flex-col md:flex-row md:justify-between md:items-center">
        <div>
            <h3 class="text-2xl font-serif font-bold text-coffee-dark inline-block relative">
                <span class="relative z-10">Guest Profile</span>
                <span class="absolute bottom-0 left-0 w-full h-2 bg-coffee-accent bg-opacity-40 -z-0"></span>
            </h3>
            <nav aria-label="breadcrumb" class="mt-2">
                <ol class="flex space-x-2 text-coffee-medium">
                    <li><a href="/Dashboard" class="hover:text-coffee-accent transition-colors">Dashboard</a></li>
                    <li>/</li>
                    <li><a href="/Guest/List" class="hover:text-coffee-accent transition-colors">Guests</a></li>
                    <li>/</li>
                    <li class="text-coffee-accent">@Model.Guest.User.firstname @Model.Guest.User.lastname</li>
                </ol>
            </nav>
        </div>
        <div class="mt-4 md:mt-0">
            <a href="@Url.Action("List", "Guest")" class="px-4 py-2 bg-coffee-dark text-coffee-cream rounded-lg shadow-md hover:bg-coffee-medium transition flex items-center space-x-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                <span>Back to Guest List</span>
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Profile Information -->
        <div class="bg-white shadow-lg rounded-xl overflow-hidden border border-coffee-cream">
            <div class="bg-coffee-dark py-4 px-6">
                <h6 class="text-coffee-cream font-medium">Profile Information</h6>
            </div>
            <div class="p-6">
                <div class="text-center mb-6">
                    <div class="w-20 h-20 bg-coffee-cream bg-opacity-60 rounded-full flex items-center justify-center mx-auto mb-4">
                        <span class="text-3xl font-serif text-coffee-accent">@Model.Guest.User.firstname[0]@Model.Guest.User.lastname[0]</span>
                    </div>
                    <h4 class="text-xl font-medium text-coffee-dark">@Model.Guest.User.firstname @Model.Guest.User.lastname</h4>
                    <p class="text-coffee-medium mt-1">Guest ID: @Model.Guest.guest_id</p>
                </div>

                <div class="space-y-4 mt-6">
                    <div class="flex justify-between items-center pb-2 border-b border-coffee-cream">
                        <span class="flex items-center text-coffee-medium">
                            <i class="fa-solid fa-user text-coffee-accent mr-3"></i> Username
                        </span>
                        <span class="font-medium text-coffee-dark">@Model.Guest.User.username</span>
                    </div>

                    <div class="flex justify-between items-center pb-2 border-b border-coffee-cream">
                        <span class="flex items-center text-coffee-medium">
                            <i class="fa-solid fa-envelope text-coffee-accent mr-3"></i> Email
                        </span>
                        <span class="font-medium text-coffee-dark">@Model.Guest.User.email</span>
                    </div>

                    <div class="flex justify-between items-center pb-2 border-b border-coffee-cream">
                        <span class="flex items-center text-coffee-medium">
                            <i class="fa-solid fa-phone text-coffee-accent mr-3"></i> Phone
                        </span>
                        <span class="font-medium text-coffee-dark">@(string.IsNullOrEmpty(Model.Guest.phone) ? "Not provided" : Model.Guest.phone)</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Guest Preferences -->
        <div class="bg-white shadow-lg rounded-xl overflow-hidden border border-coffee-cream">
            <div class="bg-coffee-dark py-4 px-6">
                <h6 class="text-coffee-cream font-medium">Guest Preferences</h6>
            </div>
            <div class="p-6">
                <div class="grid grid-cols-2 gap-4">
                    <div class="bg-coffee-cream bg-opacity-20 p-4 rounded-lg border-l-4 border-coffee-accent">
                        <div class="flex justify-between items-center">
                            <div>
                                <p class="text-xs font-medium text-coffee-medium uppercase">Preferred Room</p>
                                <p class="text-lg font-medium text-coffee-dark mt-1">@Model.PreferredRoomType</p>
                            </div>
                            <div class="text-coffee-accent">
                                <i class="fa-solid fa-bed text-2xl"></i>
                            </div>
                        </div>
                    </div>

                    <div class="bg-coffee-cream bg-opacity-20 p-4 rounded-lg border-l-4 border-coffee-accent">
                        <div class="flex justify-between items-center">
                            <div>
                                <p class="text-xs font-medium text-coffee-medium uppercase">Average Stay</p>
                                <p class="text-lg font-medium text-coffee-dark mt-1">@Model.AverageStayLength days</p>
                            </div>
                            <div class="text-coffee-accent">
                                <i class="fa-solid fa-calendar-day text-2xl"></i>
                            </div>
                        </div>
                    </div>

                    <div class="bg-coffee-cream bg-opacity-20 p-4 rounded-lg border-l-4 border-coffee-accent">
                        <div class="flex justify-between items-center">
                            <div>
                                <p class="text-xs font-medium text-coffee-medium uppercase">Total Bookings</p>
                                <p class="text-lg font-medium text-coffee-dark mt-1">@Model.TotalBookings</p>
                            </div>
                            <div class="text-coffee-accent">
                                <i class="fa-solid fa-bookmark text-2xl"></i>
                            </div>
                        </div>
                    </div>

                    <div class="bg-coffee-cream bg-opacity-20 p-4 rounded-lg border-l-4 border-coffee-accent">
                        <div class="flex justify-between items-center">
                            <div>
                                <p class="text-xs font-medium text-coffee-medium uppercase">Total Spent</p>
                                <p class="text-lg font-medium text-coffee-dark mt-1">$@Model.TotalSpent.ToString("0.00")</p>
                            </div>
                            <div class="text-coffee-accent">
                                <i class="fa-solid fa-credit-card text-2xl"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Booking Status Breakdown -->
                <div class="mt-6">
                    <h6 class="font-medium text-coffee-dark mb-3">Booking Status</h6>

                    @{
                        var confirmedBookings = Model.Guest.Bookings.Count(b => b.status == "Confirmed");
                        var pendingBookings = Model.Guest.Bookings.Count(b => b.status == "Pending");
                        var cancelledBookings = Model.Guest.Bookings.Count(b => b.status == "Cancelled");

                        var confirmedPercentage = Model.TotalBookings > 0 ? confirmedBookings * 100 / Model.TotalBookings : 0;
                        var pendingPercentage = Model.TotalBookings > 0 ? pendingBookings * 100 / Model.TotalBookings : 0;
                        var cancelledPercentage = Model.TotalBookings > 0 ? cancelledBookings * 100 / Model.TotalBookings : 0;
                    }

                    <div class="space-y-3">
                        <div>
                            <div class="flex justify-between text-sm mb-1">
                                <span class="text-coffee-medium">Confirmed</span>
                                <span class="text-coffee-dark font-medium">@confirmedPercentage%</span>
                            </div>
                            <div class="h-2 bg-coffee-cream rounded-full">
                                <div class="h-2 bg-green-600 rounded-full" style="width: @confirmedPercentage%"></div>
                            </div>
                        </div>

                        <div>
                            <div class="flex justify-between text-sm mb-1">
                                <span class="text-coffee-medium">Pending</span>
                                <span class="text-coffee-dark font-medium">@pendingPercentage%</span>
                            </div>
                            <div class="h-2 bg-coffee-cream rounded-full">
                                <div class="h-2 bg-yellow-600 rounded-full" style="width: @pendingPercentage%"></div>
                            </div>
                        </div>

                        <div>
                            <div class="flex justify-between text-sm mb-1">
                                <span class="text-coffee-medium">Cancelled</span>
                                <span class="text-coffee-dark font-medium">@cancelledPercentage%</span>
                            </div>
                            <div class="h-2 bg-coffee-cream rounded-full">
                                <div class="h-2 bg-red-600 rounded-full" style="width: @cancelledPercentage%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="bg-white shadow-lg rounded-xl overflow-hidden border border-coffee-cream">
            <div class="bg-coffee-dark py-4 px-6">
                <h6 class="text-coffee-cream font-medium">Recent Activity</h6>
            </div>
            <div class="p-6">
                @if (Model.Guest.Bookings.Any())
                {
                    <div class="space-y-5 relative">
                        <div class="absolute left-4 top-0 h-full w-0.5 bg-coffee-cream"></div>

                        @foreach (var booking in Model.Guest.Bookings.OrderByDescending(b => b.check_in_date).Take(5))
                        {
                            var statusClass = booking.status == "Confirmed" ? "green" :
                            (booking.status == "Pending" ? "yellow" : "red");

                            <div class="pl-10 relative">
                                <div class="absolute left-0 top-1.5 w-8 h-8 rounded-full bg-@statusClass-600 border-4 border-white flex items-center justify-center">
                                    @if (booking.status == "Confirmed")
                                    {
                                        <i class="fa-solid fa-check text-white text-xs"></i>
                                    }
                                    else if (booking.status == "Pending")
                                    {
                                        <i class="fa-solid fa-clock text-white text-xs"></i>
                                    }
                                    else
                                    {
                                        <i class="fa-solid fa-xmark text-white text-xs"></i>
                                    }
                                </div>

                                <div>
                                    <h6 class="font-medium text-coffee-dark">@booking.status Booking #@booking.booking_id</h6>
                                    <p class="text-sm text-coffee-medium mt-1">
                                        Room @booking.Room.RoomNumber (@booking.Room.Category) <br>
                                        @booking.check_in_date.ToString("MMM dd") to @booking.check_out_date.ToString("MMM dd, yyyy")
                                    </p>
                                    <p class="text-coffee-accent font-medium mt-1">
                                        $@booking.total_amount.ToString("0.00")
                                    </p>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="flex flex-col items-center justify-center h-48">
                        <i class="fa-solid fa-calendar-xmark text-coffee-light text-4xl mb-3"></i>
                        <p class="text-coffee-medium">No booking history available</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Booking History -->
    <div class="mt-6">
        <div class="bg-white shadow-lg rounded-xl overflow-hidden border border-coffee-cream">
            <div class="bg-coffee-dark py-4 px-6 flex justify-between items-center">
                <h6 class="text-coffee-cream font-medium">Complete Booking History</h6>
                <span class="px-3 py-1 bg-coffee-accent rounded-full text-xs font-medium text-white">
                    @Model.Guest.Bookings.Count total
                </span>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="bg-coffee-cream bg-opacity-30">
                            <th class="py-3 px-6 text-left font-medium text-sm text-coffee-dark">ID</th>
                            <th class="py-3 px-6 text-left font-medium text-sm text-coffee-dark">Room</th>
                            <th class="py-3 px-6 text-left font-medium text-sm text-coffee-dark">Check In</th>
                            <th class="py-3 px-6 text-left font-medium text-sm text-coffee-dark">Check Out</th>
                            <th class="py-3 px-6 text-left font-medium text-sm text-coffee-dark">Length</th>
                            <th class="py-3 px-6 text-left font-medium text-sm text-coffee-dark">Status</th>
                            <th class="py-3 px-6 text-left font-medium text-sm text-coffee-dark">Amount</th>
                            <th class="py-3 px-6 text-left font-medium text-sm text-coffee-dark">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-coffee-cream">
                        @if (Model.Guest.Bookings.Any())
                        {
                            @foreach (var booking in Model.Guest.Bookings.OrderByDescending(b => b.check_in_date))
                            {
                                var stayLength = (booking.check_out_date - booking.check_in_date).TotalDays;
                                var statusClass = booking.status == "Confirmed" ? "green" :
                                (booking.status == "Pending" ? "yellow" : "red");

                                <tr class="hover:bg-coffee-cream hover:bg-opacity-20 transition-colors">
                                    <td class="py-4 px-6 font-medium text-coffee-dark">#@booking.booking_id</td>
                                    <td class="py-4 px-6">
                                        <div class="flex items-center">
                                            <div class="w-10 h-10 rounded overflow-hidden mr-3">
                                                <img src="@booking.Room.ImageUrl.Replace("~", "")" alt="Room" class="w-full h-full object-cover" />
                                            </div>
                                            <div>
                                                <p class="font-medium text-coffee-dark">Room @booking.Room.RoomNumber</p>
                                                <p class="text-xs text-coffee-medium">@booking.Room.Category</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="py-4 px-6 text-coffee-medium">@booking.check_in_date.ToString("MMM dd, yyyy")</td>
                                    <td class="py-4 px-6 text-coffee-medium">@booking.check_out_date.ToString("MMM dd, yyyy")</td>
                                    <td class="py-4 px-6 text-coffee-medium">@stayLength days</td>
                                    <td class="py-4 px-6">
                                        <span class="px-3 py-1 rounded-full text-xs font-medium text-white bg-@statusClass-600">
                                            @booking.status
                                        </span>
                                    </td>
                                    <td class="py-4 px-6 font-medium text-coffee-dark">$@booking.total_amount.ToString("0.00")</td>
                                    <td class="py-4 px-6">
                                        <a href="@Url.Action("Details", "Booking", new { id = booking.booking_id })"
                                           class="px-3 py-1 bg-coffee-dark text-coffee-cream rounded hover:bg-coffee-medium transition-colors inline-flex items-center space-x-1">
                                            <i class="fa-solid fa-eye text-xs"></i>
                                            <span>View</span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="py-10 text-center">
                                    <i class="fa-solid fa-calendar-xmark text-coffee-light text-3xl mb-3"></i>
                                    <p class="text-coffee-medium">No booking history found for this guest.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
