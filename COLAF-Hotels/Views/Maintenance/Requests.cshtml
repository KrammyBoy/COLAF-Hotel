@model IEnumerable<COLAFHotel.Models.MaintenanceRequest>
@{
    ViewBag.Title = "Maintenance Requests";
}

<div class="max-w-6xl mx-auto mt-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Maintenance Requests</h2>
    <a class="px-4 py-2 bg-green-600 text-white rounded-lg shadow-md hover:bg-green-700 transition" asp-action="CreateRequest">
        + Create New Request
    </a>

    <div class="mt-4 overflow-x-auto bg-white shadow-md rounded-lg">
        <table class="w-full border-collapse">
            <thead class="bg-gray-800 text-white">
                <tr>
                    <th class="py-3 px-4 text-left">ID</th>
                    <th class="py-3 px-4 text-left">Room Number</th>
                    <th class="py-3 px-4 text-left">Issue Description</th>
                    <th class="py-3 px-4 text-left">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var request in Model)
                {
                    <tr class="border-b hover:bg-gray-100">
                        <td class="py-3 px-4">@request.Id</td>
                        <td class="py-3 px-4">@request.RoomNumber</td>
                        <td class="py-3 px-4">@request.IssueDescription</td>
                        <td class="py-3 px-4">
                            <span class="px-3 py-1 rounded-full text-sm font-medium @GetStatusClass(request.Status)">
                                @request.Status
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@functions {
    string GetStatusClass(string status)
    {
        return status switch
        {
            "Reported" => "bg-yellow-500 text-gray-900",
            "In Progress" => "bg-blue-500 text-white",
            "Completed" => "bg-green-500 text-white",
            _ => "bg-gray-500 text-white"
        };
    }
}
