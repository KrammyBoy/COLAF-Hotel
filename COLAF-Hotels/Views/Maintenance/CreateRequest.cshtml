@model COLAFHotel.Models.MaintenanceRequest
@{
    ViewBag.Title = "Create Maintenance Request";
}

<div class="max-w-2xl mx-auto mt-8 mb-8">
    <div class="bg-gradient-to-r from-coffee-cream to-white rounded-2xl shadow-lg border border-coffee-light overflow-hidden">
        <!-- Header -->
        <div class="bg-coffee-dark py-4 px-6">
            <div class="flex items-center space-x-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-coffee-cream" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <h2 class="text-2xl font-bold text-coffee-cream">Create Maintenance Request</h2>
            </div>
        </div>

        <!-- Form -->
        <div class="p-8">
            <form asp-action="CreateRequest" method="post" class="space-y-6">
                <div class="space-y-2">
                    <label class="block text-coffee-medium font-medium">Room Number:</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-coffee-light" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                            </svg>
                        </div>
                        <input type="text" asp-for="RoomNumber" class="w-full pl-10 pr-4 py-3 bg-white border border-coffee-light rounded-lg focus:ring-2 focus:ring-coffee-accent focus:border-transparent transition" placeholder="Enter room number" required />
                    </div>
                    <p class="text-xs text-coffee-medium mt-1">Enter the room number where the issue is located</p>
                </div>

                <div class="space-y-2">
                    <label class="block text-coffee-medium font-medium">Issue Description:</label>
                    <div class="relative">
                        <div class="absolute top-3 left-3 pointer-events-none">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-coffee-light" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                            </svg>
                        </div>
                        <textarea asp-for="IssueDescription" rows="4" class="w-full pl-10 pr-4 py-3 bg-white border border-coffee-light rounded-lg focus:ring-2 focus:ring-coffee-accent focus:border-transparent transition" placeholder="Describe the issue in detail" required></textarea>
                    </div>
                    <p class="text-xs text-coffee-medium mt-1">Please provide a detailed description of the maintenance issue</p>
                </div>

                <div class="space-y-2">
                    <label class="block text-coffee-medium font-medium">Status:</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-coffee-light" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <select asp-for="Status" class="w-full pl-10 pr-4 py-3 bg-white border border-coffee-light rounded-lg focus:ring-2 focus:ring-coffee-accent focus:border-transparent transition appearance-none">
                            <option value="Reported">Reported</option>
                            <option value="In Progress">In Progress</option>
                            <option value="Completed">Completed</option>
                        </select>
                        <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-coffee-light" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                            </svg>
                        </div>
                    </div>
                </div>

                <div class="pt-4">
                    <button type="submit" class="w-full bg-coffee-dark text-coffee-cream py-3 px-6 rounded-lg hover:bg-coffee-medium shadow-md transition duration-200 flex items-center justify-center space-x-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        <span class="font-bold">Submit Request</span>
                    </button>
                </div>
            </form>

            <div class="mt-6 flex justify-center">
                <a asp-action="Requests" class="text-coffee-medium hover:text-coffee-dark flex items-center space-x-1 transition duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                    <span>Back to Maintenance Requests</span>
                </a>
            </div>
        </div>
    </div>
</div>