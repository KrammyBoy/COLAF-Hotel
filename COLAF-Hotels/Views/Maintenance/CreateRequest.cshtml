@inject IHttpContextAccessor HttpContextAccessor
@model COLAFHotel.Models.MaintenanceRequest
@{
    ViewBag.Title = "Create Maintenance Request";
    var hasRooms = ViewBag.RoomList != null && ((IEnumerable<SelectListItem>)ViewBag.RoomList).Any();
}

<div class="max-w-2xl mx-auto mt-8 mb-8">
    <div class="bg-gradient-to-r from-coffee-cream to-white rounded-2xl shadow-lg border border-coffee-light overflow-hidden">
        <!-- Header -->
        <div class="bg-coffee-dark py-4 px-6">
            <div class="flex items-center space-x-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-coffee-cream" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <h2 class="text-2xl font-bold text-coffee-cream">Create Maintenance Request</h2>
            </div>
        </div>

        <!-- Content -->
        <div class="p-8">
            @if (hasRooms)
            {
                <!-- Form - Only show when user has checked-in rooms -->
                <form asp-action="CreateRequest" method="post" class="space-y-6">
                    <div class="space-y-2">
                        <label asp-for="room_id" class="block text-coffee-medium font-medium">Room Number:</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-coffee-light" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                </svg>
                            </div>
                            <select asp-for="room_id" asp-items="ViewBag.RoomList" class="w-full pl-10 pr-4 py-3 bg-white border border-coffee-light rounded-lg focus:ring-2 focus:ring-coffee-accent focus:border-transparent transition">
                                <option value="">-- Select Room --</option>
                            </select>
                        </div>
                        <p class="text-xs text-coffee-medium mt-1">Select the room you are currently checked into</p>
                        <span asp-validation-for="room_id" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="space-y-2">
                        <label asp-for="issue_description" class="block text-coffee-medium font-medium">Issue Description:</label>
                        <div class="relative">
                            <div class="absolute top-3 left-3 pointer-events-none">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-coffee-light" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                            </div>
                            <textarea asp-for="issue_description" rows="4" class="w-full pl-10 pr-4 py-3 bg-white border border-coffee-light rounded-lg focus:ring-2 focus:ring-coffee-accent focus:border-transparent transition" placeholder="Describe the issue in detail" required></textarea>
                        </div>
                        <p class="text-xs text-coffee-medium mt-1">Please provide a detailed description of the maintenance issue</p>
                        <span asp-validation-for="issue_description" class="text-red-500 text-sm"></span>
                    </div>
                    <div class="pt-4">
                        <button type="submit" class="w-full bg-coffee-dark text-coffee-cream py-3 px-6 rounded-lg hover:bg-coffee-medium shadow-md transition duration-200 flex items-center justify-center space-x-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                            <span class="font-bold">Submit Request</span>
                        </button>
                    </div>
                </form>
            }
            else
            {
                <!-- No Checked-In Rooms Message -->
                <div class="text-center">
                    <div class="flex justify-center mb-6">
                        <div class="bg-coffee-light/20 p-6 rounded-full">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-coffee-medium" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                    </div>

                    <h3 class="text-xl font-bold text-coffee-dark mb-4">You Don't Have Any Checked-In Rooms</h3>

                    <p class="text-coffee-medium mb-6">
                        To submit a maintenance request, you need to have an active booking and be checked in.
                        Please complete your check-in process at the front desk or contact our reception if you need assistance.
                    </p>

                    <div class="space-y-4 mb-8">
                        <div class="bg-coffee-cream/20 rounded-lg p-4 border border-coffee-light">
                            <div class="flex items-start">
                                <div class="flex-shrink-0 pt-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-coffee-dark" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                </div>
                                <div class="ml-3 text-left">
                                    <h4 class="text-coffee-dark font-medium">Have a reservation?</h4>
                                    <p class="text-sm text-coffee-medium">
                                        Please visit the front desk to complete your check-in process.
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="bg-coffee-cream/20 rounded-lg p-4 border border-coffee-light">
                            <div class="flex items-start">
                                <div class="flex-shrink-0 pt-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-coffee-dark" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                                    </svg>
                                </div>
                                <div class="ml-3 text-left">
                                    <h4 class="text-coffee-dark font-medium">Need immediate assistance?</h4>
                                    <p class="text-sm text-coffee-medium">
                                        Please contact our reception desk directly at extension 0 from any hotel phone.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="flex flex-col sm:flex-row justify-center space-y-4 sm:space-y-0 sm:space-x-4">
                        <a asp-controller="Booking" asp-action="Index" class="inline-flex items-center justify-center px-6 py-3 bg-coffee-dark text-coffee-cream rounded-lg hover:bg-coffee-medium shadow-md transition duration-200">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            View My Bookings
                        </a>
                        <a asp-controller="Dashboard" asp-action="Index" class="inline-flex items-center justify-center px-6 py-3 bg-white text-coffee-dark border border-coffee-light rounded-lg hover:bg-coffee-cream/30 shadow-md transition duration-200">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                            </svg>
                            Return to Home
                        </a>
                    </div>
                </div>
            }

            <div class="mt-6 flex justify-center">
                <a asp-action="Requests" class="text-coffee-medium hover:text-coffee-dark flex items-center space-x-1 transition duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                    <span>Back to Maintenance Requests</span>
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}