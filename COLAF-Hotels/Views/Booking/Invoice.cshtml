@model COLAFHotel.Models.Invoice
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewBag.Title = "Invoice Details";
    var user = HttpContextAccessor.HttpContext?.Session.GetString("User");
    var role = HttpContextAccessor.HttpContext?.Session.GetString("Role");
    var isGuest = HttpContextAccessor.HttpContext?.Session.GetString("GuestId");
    var user_id = HttpContextAccessor.HttpContext?.Session.GetString("UserId");

    // Calculate nights for display
    int nights = (int)(Model.Booking.check_out_date - Model.Booking.check_in_date).TotalDays;
    decimal roomRate = Model.Booking.Room.Price;
    decimal roomTotal = roomRate * nights;
}

<div class="max-w-4xl mx-auto bg-white shadow-lg rounded-lg overflow-hidden border border-coffee-light">
    <!-- Header -->
    <div class="bg-coffee-cream p-6 border-b border-coffee-light">
        <div class="flex flex-col md:flex-row justify-between items-center">
            <div>
                <h1 class="text-2xl font-bold text-coffee-dark">COLAF HOTEL</h1>
                <p class="text-coffee-medium italic">An unforgettable stay with a coffee-inspired twist</p>
                <p class="text-sm text-coffee-medium">R.530 St., UCM Boulevard</p>
                <p class="text-sm text-coffee-medium">reservations@colafhotel.com | +1 (800) 420-1337</p>
            </div>
            <div class="text-center md:text-right mt-4 md:mt-0">
                <h2 class="text-xl font-bold text-coffee-accent">INVOICE #@Model.invoice_id</h2>
                <p class="text-coffee-medium">Issue Date: @Model.issue_date.ToString("MMMM dd, yyyy")</p>
                <p class="text-coffee-medium">Due Date: @Model.issue_date.AddDays(14).ToString("MMMM dd, yyyy")</p>
            </div>
        </div>
    </div>

    <!-- Invoice Content -->
    <div class="p-6">
        <!-- Guest and Booking Info -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
                <h3 class="text-coffee-dark font-semibold mb-2 border-b border-coffee-light pb-1">INVOICE DETAILS</h3>
                <div class="grid grid-cols-2 gap-1">
                    <p class="text-coffee-light">Invoice No:</p>
                    <p class="font-semibold">@Model.invoice_id</p>
                    <p class="text-coffee-light">Booking Ref:</p>
                    <p class="font-semibold">@Model.booking_id</p>
                    <p class="text-coffee-light">Issue Date:</p>
                    <p class="font-semibold">@Model.issue_date.ToString("MMM dd, yyyy")</p>
                    <p class="text-coffee-light">Due Date:</p>
                    <p class="font-semibold">@Model.issue_date.AddDays(14).ToString("MMM dd, yyyy")</p>
                </div>
            </div>
            <div>
                <h3 class="text-coffee-dark font-semibold mb-2 border-b border-coffee-light pb-1">GUEST INFORMATION</h3>
                <p class="text-coffee-medium">Name: @Model.Booking.Guest.User.firstname @Model.Booking.Guest.User.lastname</p>
                <p class="text-coffee-medium">Phone: @Model.Booking.Guest.phone</p>
                <p class="text-coffee-medium">Email: @Model.Booking.Guest.User.email</p>
            </div>
        </div>

        <!-- Stay Details -->
        <div class="mb-6">
            <h3 class="text-coffee-dark font-semibold mb-2 border-b border-coffee-light pb-1">STAY DETAILS</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-1">
                <p class="text-coffee-light">Check-in Date:</p>
                <p class="font-semibold">@Model.Booking.check_in_date.ToString("dddd, MMM dd, yyyy") (from 3:00 PM)</p>
                <p class="text-coffee-light">Check-out Date:</p>
                <p class="font-semibold">@Model.Booking.check_out_date.ToString("dddd, MMM dd, yyyy") (by 11:00 AM)</p>
                <p class="text-coffee-light">Length of Stay:</p>
                <p class="font-semibold">@nights Nights</p>
                <p class="text-coffee-light">Room:</p>
                <p class="font-semibold">@Model.Booking.Room.RoomNumber - @Model.Booking.Room.Category</p>
            </div>
        </div>

        <!-- Charges -->
        <div class="mb-6">
            <h3 class="text-coffee-dark font-semibold mb-2 border-b border-coffee-light pb-1">CHARGES</h3>
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="bg-coffee-dark text-white">
                            <th class="py-2 px-4 text-left">Description</th>
                            <th class="py-2 px-4 text-right">Quantity</th>
                            <th class="py-2 px-4 text-right">Rate</th>
                            <th class="py-2 px-4 text-right">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="border-b border-coffee-cream">
                            <td class="py-2 px-4">Room Charge (@Model.Booking.Room.RoomNumber - @Model.Booking.Room.Category)</td>
                            <td class="py-2 px-4 text-right">@nights nights</td>
                            <td class="py-2 px-4 text-right">$@Model.Booking.Room.Price.ToString("F2")</td>
                            <td class="py-2 px-4 text-right">$@roomTotal.ToString("F2")</td>
                        </tr>

                        @if (Model.Booking.BookingServices != null && Model.Booking.BookingServices.Any())
                        {
                            @foreach (var bookingService in Model.Booking.BookingServices)
                            {
                                <tr class="border-b border-coffee-cream">
                                    <td class="py-2 px-4">@bookingService.Service.name</td>
                                    <td class="py-2 px-4 text-right">1</td>
                                    <td class="py-2 px-4 text-right">$@bookingService.Service.price.ToString("F2")</td>
                                    <td class="py-2 px-4 text-right">$@bookingService.Service.price.ToString("F2")</td>
                                </tr>
                            }
                        }

                        @if (Model.Booking.discount_id.HasValue)
                        {
                            <tr class="border-b border-coffee-cream text-green-600">
                                <td class="py-2 px-4">Discount</td>
                                <td class="py-2 px-4 text-right">1</td>
                                <td class="py-2 px-4 text-right">-</td>
                                <td class="py-2 px-4 text-right">See details</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Summary -->
        <div class="mb-6">
            <div class="flex justify-end">
                <div class="w-64">
                    @if (ViewBag.ServicesTotal > 0)
                    {
                        <div class="flex justify-between py-1">
                            <span class="text-coffee-light">Room Charges:</span>
                            <span class="font-semibold">$@roomTotal.ToString("F2")</span>
                        </div>
                        <div class="flex justify-between py-1">
                            <span class="text-coffee-light">Services:</span>
                            <span class="font-semibold">$@ViewBag.ServicesTotal.ToString("F2")</span>
                        </div>
                    }
                    <div class="flex justify-between py-1">
                        <span class="font-semibold text-coffee-dark">Total:</span>
                        <span class="font-bold text-coffee-accent">$@Model.Booking.total_amount.ToString("F2")</span>
                    </div>
                    <div class="flex justify-between py-1">
                        <span class="text-coffee-light">Amount Paid:</span>
                        <span class="font-semibold">$@((Model.Booking.total_amount - Model.Booking.totalBalance))</span>
                    </div>
                    <div class="flex justify-between py-1 border-t border-coffee-light pt-2">
                        <span class="font-semibold text-coffee-dark">Balance Due:</span>
                        <span class="font-bold text-red-500">$@Model.Booking.totalBalance</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payment Info -->
        <div class="mb-6 p-4 bg-coffee-cream rounded-lg">
            <h3 class="text-coffee-dark font-semibold mb-2">PAYMENT INFORMATION</h3>
            <p class="text-coffee-medium">Please include your invoice number with your payment.</p>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-1 mt-2">
                <p class="text-coffee-light">Bank Transfer:</p>
                <p class="font-semibold">COLAF Bank • Acc: 1234-5678-9012 • Sort: 12-34-56</p>
                <p class="text-coffee-light">Payment Due:</p>
                <p class="font-semibold">@Model.issue_date.AddDays(14).ToString("MMM dd, yyyy")</p>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="bg-coffee-cream p-6 border-t border-coffee-light">
        <div class="flex flex-col md:flex-row justify-between items-center">
            <div>
                <p class="text-coffee-medium text-sm">Thank you for choosing <span class="font-bold text-coffee-dark">COLAF Hotel</span></p>
                <p class="text-coffee-medium text-sm">We look forward to welcoming you back soon!</p>
            </div>
            <div class="mt-4 md:mt-0">
                <a asp-controller="Booking" asp-action="DownloadPdf" asp-route-id="@Model.Booking.booking_id"
                   class="bg-coffee-accent text-white px-6 py-2 rounded-lg shadow-md hover:bg-coffee-dark transition inline-block">
                    Download PDF
                </a>
            </div>
        </div>
    </div>
</div>