@model IEnumerable<COLAFHotel.Models.Discount>
@{
    ViewBag.Title = "Discount Offers";
}

<div class="container mx-auto p-6 bg-coffee-cream bg-opacity-10">
    <div class="mb-8">
        <h2 class="text-2xl font-serif font-bold text-coffee-dark inline-block relative">
            <span class="relative z-10">Special Offers & Discounts</span>
            <span class="absolute bottom-0 left-0 w-full h-2 bg-coffee-accent bg-opacity-40 -z-0"></span>
        </h2>
        <p class="text-coffee-medium mt-2">Exclusive deals to enhance your stay experience</p>
    </div>

    @if (Model.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var discount in Model)
            {
                <div class="bg-white rounded-xl overflow-hidden shadow-lg border border-coffee-cream hover:shadow-xl transition-shadow duration-300">
                    <div class="h-3 bg-coffee-accent"></div>
                    <div class="p-6">
                        <div class="flex justify-between items-start mb-4">
                            <h3 class="text-xl font-serif font-bold text-coffee-dark">@discount.name</h3>
                            <span class="inline-block bg-coffee-accent text-white text-sm font-bold px-3 py-1 rounded-full">
                                @discount.discount_value%
                            </span>
                        </div>

                        <p class="text-coffee-medium mb-4">@discount.description</p>

                        <div class="space-y-3 mb-6">
                            <div class="flex items-center text-sm">
                                <svg class="h-5 w-5 text-coffee-accent mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                                <span class="text-coffee-medium">Valid Until: <span class="font-medium text-coffee-dark">@discount.expiration_date.ToString("MMMM dd, yyyy")</span></span>
                            </div>

                            <div class="flex items-center text-sm">
                                <svg class="h-5 w-5 text-coffee-accent mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                                </svg>
                                <span class="text-coffee-medium">
                                    Promo Code: <span class="font-medium text-coffee-dark">@discount.promo_code</span>
                                </span>
                            </div>
                        </div>

                        <div class="bg-coffee-cream bg-opacity-20 p-4 rounded-lg border border-coffee-cream border-opacity-40">
                            <div class="flex justify-between items-center text-sm">
                                <span class="text-coffee-medium">Status:</span>
                                <span class="px-2 py-1 @(
                                      discount.status == "Active"
                                          ? "bg-green-100 text-green-800"
                                          : "bg-red-100 text-red-800"
                                                                ) rounded - full text - xs font - medium">@discount.status</span>
                        </div>
                    </div>

                        <form method="post" asp-controller="Discount" asp-action="ApplyPromo">
                            <input type="hidden" name="promoCode" value="@discount.promo_code" />
                            <input type="hidden" name="discountValue" value="@discount.discount_value" />
                            <input type="hidden" name="discountID" value="@discount.discount_id"/>
                            <button type="submit" class="block w-full py-3 bg-coffee-dark text-center text-white font-medium rounded-lg hover:bg-coffee-medium transition-colors duration-150">
                                Book with this offer
                            </button>
                        </form>
                    </div>
                </div>
                }
        </div>
    }
    else
    {
        <div class="bg-white rounded-xl p-12 text-center shadow-lg border border-coffee-cream">
            <svg class="mx-auto h-16 w-16 text-coffee-light" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <h3 class="mt-4 text-xl font-serif font-bold text-coffee-dark">No Active Offers</h3>
            <p class="mt-2 text-coffee-medium">Check back soon for new discounts and special offers</p>
            <a href="/Room/List" class="mt-6 inline-block px-6 py-3 bg-coffee-accent text-white rounded-lg hover:bg-coffee-dark transition-colors">
                Browse Rooms
            </a>
        </div>
    }
</div>
