@{
    ViewBag.Title = "Dashboard";
}

<div class="relative w-full h-[125vh] flex items-center justify-between px-12 overflow-hidden text-white">
    <!-- Hero Image with Blending Effect -->
    <img src="@Url.Content("~/assets/hotel_assets/hotel-home.jpg")"
         class="absolute inset-0 w-full h-full object-cover mix-blend-multiply opacity-90" />

    <!-- SVG Divider (Fully Colored) -->
    <svg class="absolute top-0 left-0 w-full h-auto z-10" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
        <path fill="#3E362E" d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z"></path>
    </svg>

    <!-- Left Section (Key Phrases, Reviews, CTA) -->
    <div class="relative w-1/2 space-y-6 z-10">
        <h1 class="text-6xl font-bold text-[#D4AF37] drop-shadow-lg animate-fade-in">
            Experience Luxury & Comfort
        </h1>
        <p class="text-lg text-gray-300 max-w-lg animate-fade-in delay-200">
            Discover world-class hospitality, premium rooms, and an unforgettable stay.
        </p>

        <!-- Reviews -->
        <div class="flex items-center space-x-4 animate-slide-in-left delay-400">
            <div class="flex space-x-1">
                <!-- SVG Stars (5-Star Rating) -->
                @for (int i = 0; i < 5; i++)
                {
                    <svg class="w-8 h-8 text-[#FFD700]" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 1l2.4 6.9h7.2l-5.8 4.2 2.2 6.9L10 14.8l-5.8 4.2 2.2-6.9-5.8-4.2h7.2L10 1z"></path>
                    </svg>
                }
            </div>
            <p class="text-2xl font-semibold text-gray-200">Rated 4.9/5 by thousands of happy guests</p>
        </div>

        <!-- Call to Action - "Book Now" Moved Below -->
        <div class="mt-6 flex justify-start animate-fade-in delay-600">
            <a href="/booking"
               class="bg-[#D4AF37] text-black px-8 py-3 rounded-lg text-xl font-semibold shadow-lg hover:bg-[#b8962e] hover:scale-105 transition-all animate-pulse">
                Book Now
            </a>
        </div>
    </div>

    <!-- Right Section (Register/Login) -->
    <div class="relative w-1/2 flex flex-col items-center space-y-6 z-10 animate-fade-in delay-400">
        <h2 class="text-4xl font-bold text-white">Join Our Exclusive Club</h2>
        <p class="text-lg text-gray-300 max-w-md text-center">
            Register now for exclusive discounts and priority bookings.
        </p>

        <div class="relative w-full max-w-md bg-white p-6 rounded-lg shadow-lg transition-all">
            <!-- Register Form (Default) -->
            <div id="registerForm" class="opacity-100 transition-opacity duration-300">
                <h3 class="text-2xl font-semibold text-gray-800">Register</h3>
                <p class="text-gray-600 text-sm">Not a member yet? Join us and register.</p>
                <form class="mt-4 space-y-4 text-[var(--fourth-color)]">
                    <input type="text" placeholder="Username" class="w-full p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#D4AF37]">
                    <input type="password" placeholder="Password" class="w-full p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#D4AF37]">
                    <input type="password" placeholder="Confirm Password" class="w-full p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#D4AF37]">
                    <input type="text" placeholder="Full Name" class="w-full p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#D4AF37]">
                    <input type="email" placeholder="Email" class="w-full p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#D4AF37]">
                    <button type="submit" class="w-full bg-[#D4AF37] text-black py-3 rounded-lg font-semibold hover:bg-[#b8962e] transition-all">
                        Register Now
                    </button>
                </form> 
                <p class="mt-4 text-center text-gray-600 text-sm">
                    Already have an account?
                    <span class="text-[#D4AF37] cursor-pointer hover:underline" onclick="toggleForms(true)">Login</span>
                </p>
            </div>

            <!-- Login Form (Hidden by Default) -->
            <div id="loginForm" class="absolute inset-0 bg-white p-6 rounded-lg shadow-lg transition-opacity duration-300 ease-in-out opacity-0 pointer-events-none">
                <h3 class="text-2xl font-semibold text-gray-800">Login</h3>
                <p class="text-gray-600 text-sm">Already have an account? Login.</p>
                <form class="mt-4 space-y-4 text-[var(--fourth-color)]">
                    <input type="email" placeholder="Email" class="w-full p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#D4AF37]">
                    <input type="password" placeholder="Password" class="w-full p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#D4AF37]">
                    <button type="submit" class="w-full bg-[#D4AF37] text-black py-3 rounded-lg font-semibold hover:bg-[#b8962e] transition-all">
                        Login
                    </button>
                </form>
                <p class="mt-4 text-center text-gray-600 text-sm">
                    Not a member yet?
                    <span class="text-[#D4AF37] cursor-pointer hover:underline" onclick="toggleForms(false)">Join us and register</span>
                </p>
            </div>
        </div>
    </div>
    <script>
        function toggleForms(showLogin) {
            document.getElementById('registerForm').classList.toggle('opacity-0', showLogin);
            document.getElementById('registerForm').classList.toggle('pointer-events-none', showLogin);
            document.getElementById('loginForm').classList.toggle('opacity-0', !showLogin);
            document.getElementById('loginForm').classList.toggle('pointer-events-none', !showLogin);
        }
    </script>
</div>
