@{
    ViewBag.Title = "Login";
}

<div class="flex justify-center items-center min-h-screen bg-[var(--fifth-color)]">
    <div class="bg-white shadow-lg rounded-lg p-8 w-96">
        <h2 class="text-2xl font-semibold text-[var(--primary-color)] mb-6 text-center">Login</h2>

        <form method="post" asp-action="Login" class="space-y-4">
            <div>
                <label class="block text-[var(--secondary-color)] font-medium mb-1">Username</label>
                <input type="text" name="username" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[var(--primary-color)]" required />
            </div>

            <div>
                <label class="block text-[var(--secondary-color)] font-medium mb-1">Password</label>
                <input type="password" name="password" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[var(--primary-color)]" required />
            </div>

            <button type="submit" class="w-full bg-[var(--primary-color)] text-white py-2 rounded-lg hover:bg-[var(--third-color)] transition duration-300">
                Login
            </button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="mt-4 bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded-lg">
                @ViewBag.Error
            </div>
        }
    </div>
</div>
