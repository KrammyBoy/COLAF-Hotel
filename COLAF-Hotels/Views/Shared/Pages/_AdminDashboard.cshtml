<script>
    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            headerToolbar: {
                left: 'prev,next', // Removed 'today' button
                center: 'title',
                right: 'dayGridMonth'
            },
            height: 350,
            aspectRatio: 2,
            events: '/Event/GetEvents',

            // Add hover effect for events
            eventMouseEnter: function(info) {
                let tooltip = document.createElement("div");
                tooltip.className = "fc-tooltip";
                tooltip.innerText = info.event.title;
                document.body.appendChild(tooltip);

                tooltip.style.position = "absolute";
                tooltip.style.background = "rgba(0, 0, 0, 0.8)";
                tooltip.style.color = "white";
                tooltip.style.padding = "5px 10px";
                tooltip.style.borderRadius = "5px";
                tooltip.style.fontSize = "12px";
                tooltip.style.pointerEvents = "none";
                tooltip.style.zIndex = "1000";
                tooltip.style.top = (info.jsEvent.clientY + 10) + "px";
                tooltip.style.left = (info.jsEvent.clientX + 10) + "px";

                info.el.setAttribute("data-tooltip-id", tooltip);
            },
            eventMouseLeave: function(info) {
                let tooltip = document.querySelector(".fc-tooltip");
                if (tooltip) tooltip.remove();
            }
        });

        calendar.render();

        // Function to resize calendar text & style elements
        function resizeCalendarText() {
            document.querySelectorAll('#calendar *').forEach(element => {
                element.style.fontSize = '14px'; // Change all text to 14px
            });

            // Specific text size adjustments
            document.querySelectorAll('.fc-toolbar-title').forEach(el => el.style.fontSize = '18px'); // Month title
            document.querySelectorAll('.fc-daygrid-day-number').forEach(el => el.style.fontSize = '12px'); // Day numbers
            document.querySelectorAll('.fc-event-title').forEach(el => el.style.fontSize = '10px'); // Event text
            document.querySelectorAll('.fc-col-header-cell').forEach(el => el.style.fontSize = '14px'); // Weekdays (Sun, Mon, etc.)

            // Style buttons
            document.querySelectorAll('.fc-button').forEach(button => {
                button.style.fontSize = '12px'; // Smaller button text
                button.style.padding = '5px 10px'; // Adjust padding
                button.style.height = '30px'; // Adjust button height
                button.style.backgroundColor = '#4E3629'; // Dark brown background
                button.style.border = 'none'; // Remove border
                button.style.color = 'white'; // White text
                button.style.borderRadius = '5px'; // Rounded edges
                button.style.fontWeight = 'bold'; // Bold text
                button.onmouseover = () => (button.style.backgroundColor = '#8B5E3C'); // Hover effect
                button.onmouseout = () => (button.style.backgroundColor = '#4E3629');
            });

            // Highlight the current day
            document.querySelectorAll('.fc-day-today').forEach(day => {
                day.style.backgroundColor = '#FFD700'; // Gold background for current day
                day.style.color = '#4E3629'; // Dark text for contrast
                day.style.borderRadius = '5px'; // Rounded edges
                day.style.fontWeight = 'bold';
            });
        }

        // Run initially after rendering
        setTimeout(resizeCalendarText, 500);

        // Use MutationObserver to detect changes in calendar structure & reapply styles
        const observer = new MutationObserver(() => {
            resizeCalendarText();
        });

        observer.observe(calendarEl, { childList: true, subtree: true });
    });

        function updateDateTime() {
        const now = new Date();
        const options = { weekday: 'long', month: 'long', day: 'numeric', year: 'numeric' };
        document.getElementById('dateDisplay').textContent = now.toLocaleDateString('en-US', options);
        document.getElementById('clockDisplay').textContent = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', second: '2-digit' });
    }

    setInterval(updateDateTime, 1000);
    updateDateTime(); // Initialize immediately
</script>




