<div class="flex min-h-screen bg-gray-100">
    <!-- Main Content -->
    <main class="flex-1 p-6">
        <h1 class="text-3xl font-semibold text-gray-800 font-monospace">Staff Dashboard</h1>

        <!-- Stats Cards -->
        <div class="grid grid-cols-3 gap-6 mt-6">
