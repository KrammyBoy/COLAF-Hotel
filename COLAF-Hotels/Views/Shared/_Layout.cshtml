<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - COLAF-Hotel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        :root {
            --secondary-color: #3E362E;
            --primary-color: #865D36;
            --third-color: #93785B;
            --fourth-color: #AC8968;
            --fifth-color: #A69080;
        }
    </style>
</head>
<body class="font-sans bg-gray-100">
    <nav class="bg-white shadow-md">
        <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
            <a href="@Url.Action("Index", "Dashboard")" class="text-[var(--primary-color)] text-2xl font-semibold hover:bg-[var(--fifth-color)] rounded-lg p-2">COLAF<span class="text-[var(--third-color)] text-2xl font-thin">-Hotel</span></a>
            <div class="flex space-x-6">
                <a href="@Url.Action("Index", "Dashboard")" class="text-gray-700 hover:text-[var(--primary-color)]">Dashboard</a>
                <a href="@Url.Action("List", "Room")" class="text-gray-700 hover:text-[var(--primary-color)]">Rooms</a>
                <a href="@Url.Action("Index", "Booking")" class="text-gray-700 hover:text-[var(--primary-color)]">Bookings</a>
                <a href="@Url.Action("Profile", "Guest")" class="text-gray-700 hover:text-[var(--primary-color)]">Guest Profile</a>
                <a href="@Url.Action("Tasks", "Housekeeping")" class="text-gray-700 hover:text-[var(--primary-color)]">Housekeeping</a>
                <a href="@Url.Action("Requests", "Maintenance")" class="text-gray-700 hover:text-[var(--primary-color)]">Maintenance</a>
                <a href="@Url.Action("SpecialServices", "Services")" class="text-gray-700 hover:text-[var(--primary-color)]">Services</a>
                <a href="@Url.Action("Offers", "Discount")" class="text-gray-700 hover:text-[var(--primary-color)]">Discounts</a>
                <a href="@Url.Action("Index", "Notification")" class="text-gray-700 hover:text-[var(--primary-color)]">Notifications</a>
                <a href="@Url.Action("Summary", "Reports")" class="text-gray-700 hover:text-[var(--primary-color)]">Reports</a>
                <a href="@Url.Action("Index", "Security")" class="text-gray-700 hover:text-[var(--primary-color)]">Security</a>
            </div>
            <div class="flex space-x-4 items-center">
                @if (TempData["User"] != null)
                {
                    <span class="text-gray-700">Logged in as: @TempData["User"]</span>
                    <a href="@Url.Action("Logout", "Account")" class="text-blue-600 hover:underline">Logout</a>
                }
                else
                {
                    <a href="@Url.Action("Login", "Account")" class="text-blue-600 hover:underline">Login</a>
                }
            </div>
        </div>
    </nav>

    <div class="container mx-auto mt-6 px-4">
        @RenderBody()
    </div>

    <footer class="text-center mt-6 py-4 bg-gray-800 text-white">
        <p>&copy; @DateTime.Now.Year - COLAF-Hotel</p>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
