@inject IHttpContextAccessor HttpContextAccessor
@{
    var user = HttpContextAccessor.HttpContext?.Session.GetString("User");
    var role = HttpContextAccessor.HttpContext?.Session.GetString("UserRole");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - COLAF-Hotel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        :root {
            --secondary-color: #3E362E;
            --primary-color: #865D36;
            --third-color: #93785B;
            --fourth-color: #AC8968;
            --fifth-color: #A69080;
        }
    </style>
</head>
<body class="font-sans bg-[var(--fifth-color)] text-gray-900">
    <nav class="bg-[var(--secondary-color)] shadow-md">
        <div class="max-w-full mx-auto p-3 flex justify-between items-center">
            <a href="@Url.Action("Index", "Dashboard")" class="text-[var(--fourth-color)] text-2xl font-bold hover:text-[var(--primary-color)] transition">COLAF<span class="text-[var(--third-color)] font-light hover:text-white">-Hotel</span></a>
            <div class="hidden md:flex space-x-6">
                <a href="@Url.Action("Index", "Dashboard")" class="text-white hover:text-[var(--primary-color)] transition">Home</a>
                <a href="@Url.Action("List", "Room")" class="text-white hover:text-[var(--primary-color)] transition">Rooms</a>
                <a class="text-white hover:text-[var(--primary-color)] transition">@role</a>
                @if (!string.IsNullOrEmpty(role))
                {
                    if (role == "Guest")
                    {
                        <a href="@Url.Action("Index", "Booking")" class="text-white hover:text-[var(--primary-color)] transition">Bookings</a>
                        <a href="@Url.Action("Profile", "Guest")" class="text-white hover:text-[var(--primary-color)] transition">Guest Profile</a>
                        <a href="@Url.Action("Requests", "Maintenance")" class="text-white hover:text-[var(--primary-color)] transition">Maintenance</a>
                        <a href="@Url.Action("SpecialServices", "Services")" class="text-white hover:text-[var(--primary-color)] transition">Services</a>
                        <a href="@Url.Action("Offers", "Discount")" class="text-white hover:text-[var(--primary-color)] transition">Discounts</a>
                        <a href="@Url.Action("Index", "Notification")" class="text-white hover:text-[var(--primary-color)] transition">Notifications</a>
                    }
                    else if (role == "Admin")
                    {
                        <a href="@Url.Action("Index", "Security")" class="text-white hover:text-[var(--primary-color)] transition">Security</a>
                    }
                    else if (role == "Housekeeper")
                    {
                        <a href="@Url.Action("Tasks", "Housekeeping")" class="text-white hover:text-[var(--primary-color)] transition">Housekeeping</a>
                    }
                    else if (role == "Staff")
                    {
                        <a href="@Url.Action("Index", "Booking")" class="text-white hover:text-[var(--primary-color)] transition">Bookings</a>
                        <a href="@Url.Action("Profile", "Guest")" class="text-white hover:text-[var(--primary-color)] transition">Guest Profile</a>
                        <a href="@Url.Action("Tasks", "Housekeeping")" class="text-white hover:text-[var(--primary-color)] transition">Housekeeping</a>
                        <a href="@Url.Action("SpecialServices", "Services")" class="text-white hover:text-[var(--primary-color)] transition">Services</a>
                        <a href="@Url.Action("Offers", "Discount")" class="text-white hover:text-[var(--primary-color)] transition">Discounts</a>
                        <a href="@Url.Action("Index", "Notification")" class="text-white hover:text-[var(--primary-color)] transition">Notifications</a>
                        <a href="@Url.Action("Summary", "Reports")" class="text-white hover:text-[var(--primary-color)] transition">Reports</a>
                    }
                }
            </div>
            <div class="flex items-center space-x-4">
                @if (!string.IsNullOrEmpty(user))
                {
                    <span class="text-[var(--fourth-color)]">Welcome, @user</span>
                    <a href="@Url.Action("Logout", "User")" class="bg-[var(--primary-color)] text-white px-3 py-2 rounded-md hover:bg-[var(--third-color)] transition">Logout</a>
                }
                else
                {
                    <a href="@Url.Action("Login", "User")" class="bg-[var(--primary-color)] text-white px-3 py-2 rounded-md hover:bg-[var(--third-color)] transition">Login</a>
                }
            </div>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

    <footer class="text-center py-6 bg-[var(--secondary-color)] text-white">
        <p>&copy; @DateTime.Now.Year - COLAF-Hotel. All rights reserved.</p>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
