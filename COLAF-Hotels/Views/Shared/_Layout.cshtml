@inject IHttpContextAccessor HttpContextAccessor
@{
    var user = HttpContextAccessor.HttpContext?.Session.GetString("User");
    var role = HttpContextAccessor.HttpContext?.Session.GetString("Role");
    string currentPath = Context.Request.Path.Value;

    Console.WriteLine($"Retrieved from Session in Layout - Username: {user}, Role: {role}");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    @if (!string.IsNullOrEmpty(role))
    {
        switch (role)
        {
            case "Admin":
                <title>@ViewBag.Title - Admin</title>
                break;
        }
    }
    <title>@ViewBag.Title - COLAF-Hotel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js'></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        :root {
        --secondary-color: #3E362E;
        --primary-color: #865D36;
        --third-color: #93785B;
        --fourth-color: #AC8968;
        --fifth-color: #A69080;
        }
    </style>
</head>
<body class="font-sans bg-[var(--fifth-color)] text-gray-900">
    <nav class="fixed bg-[var(--secondary-color)] shadow-md w-full p-2 rounded-b-[2rem] z-50">

        <div class="max-w-full mx-auto p-3 flex justify-between items-center">
            <!-- Logo -->
            @if (!string.IsNullOrEmpty(role))
            {
                <a href="@Url.Action("Index", "Dashboard")"
                   class="text-[var(--fourth-color)] text-2xl font-bold hover:text-[var(--primary-color)] transition">
                    COLAF<span class="text-[var(--third-color)] font-light hover:text-white">-Hotel</span>
                </a>
            }else {
            <a href="@Url.Action("Login", "User")"
               class="text-[var(--fourth-color)] text-2xl font-bold hover:text-[var(--primary-color)] transition">
                COLAF<span class="text-[var(--third-color)] font-light hover:text-white">-Hotel</span>
            </a>
            }
            <!-- Desktop Navigation -->
            <div class="hidden md:flex space-x-6">

                @if (string.IsNullOrEmpty(role))
                {
                    <a href="@Url.Action("List", "Room")"
                       class="relative text-lg cursor-pointer
              after:content-[''] after:absolute after:-bottom-1 after:left-1/2
              after:w-0 after:h-0.5 after:bg-[var(--fourth-color)] after:transition-all after:duration-300
              hover:after:w-full hover:after:left-0
                          @(Context.Request.Path.Value == Url.Action("List", "Room") ? "text-[var(--fifth-color)]" : "text-white")">
                        BOOK A ROOM
                    </a>

                }

                @if (!string.IsNullOrEmpty(role))
                {
                    @switch (role)
                    {
                        case "Guest":
                            @await Html.PartialAsync("Pages/_GuestNavLinks")
                            break;
                        case "Admin":
                            @await Html.PartialAsync("Pages/_AdminNavLinks")
                            break;
                        case "Housekeeper":
                            <a href="@Url.Action("Tasks", "Housekeeping")"
                             lass="text-white hover:text-[var(--primary-color)] transition">Housekeeping</a>
                            break;
                        case "Staff":
                            @await Html.PartialAsync("Pages/_StaffNavLinks")
                            break;
                    }
                }
            </div>

            <!-- User Info / Login -->
            <div class="flex items-center space-x-4">
                @if (!string.IsNullOrEmpty(user))
                {
                    <span class="text-[var(--fourth-color)]">Welcome, @user</span>
                    <a href="@Url.Action("Logout", "User")"
                       class="bg-[var(--primary-color)] text-white px-3 py-2 rounded-md hover:bg-[var(--third-color)] transition">
                        Logout
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Login", "User")"
                       class="bg-[var(--primary-color)] text-white px-3 py-2 rounded-md hover:bg-[var(--third-color)] transition">
                        Login
                    </a>
                }
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>

    <footer class="text-center py-6 bg-[var(--secondary-color)] text-white">
        <p>&copy; @DateTime.Now.Year - COLAF-Hotel. All rights reserved.</p>
    </footer>

    @RenderSection("Scripts", required: false)
</body>

</html>

<style>
    /* Custom Flatpickr Styles */
    .flatpickr-calendar {
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.15);
        font-family: 'Inter', sans-serif;
    }

    .flatpickr-day {
        border-radius: 8px;
        transition: all 0.2s ease-in-out;
    }

        .flatpickr-day:hover {
            background: #007bff !important;
            color: white !important;
            transform: scale(1.05);
        }

        .flatpickr-day.today {
            border: 2px solid #007bff;
            font-weight: bold;
            color: #007bff;
        }

        .flatpickr-day.selected {
            background: #007bff !important;
            color: white !important;
        }

    .flatpickr-month {
        font-size: 1rem;
        font-weight: 600;
    }

    .flatpickr-current-month {
        font-size: 1.2rem;
        font-weight: bold;
    }

    .flatpickr-prev-month, .flatpickr-next-month {
        transition: all 0.2s ease;
    }

        .flatpickr-prev-month:hover, .flatpickr-next-month:hover {
            background: rgba(0, 123, 255, 0.1);
            border-radius: 50%;
        }
</style>
