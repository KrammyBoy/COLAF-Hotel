@{
    ViewBag.Title = "Special Services";
    // Note: The model directive is commented out as specified
    // @model IEnumerable<COLAFHotel.Models.Service>

    // Sample services for design purposes
    var sampleServices = new[] {
        new { Name = "Room Service", Description = "24/7 premium room service with our specialty coffee menu." },
        new { Name = "Barista Workshop", Description = "Learn coffee brewing techniques from our expert baristas." },
        new { Name = "Coffee Tasting", Description = "Guided tasting sessions featuring our premium bean selection." },
        new { Name = "Spa Services", Description = "Rejuvenating treatments including our signature coffee scrub." },
        new { Name = "Airport Transfer", Description = "Comfortable transportation to and from the airport." }
    };
}

<div class="container mx-auto p-6 bg-coffee-cream bg-opacity-10">
    <div class="mb-8">
        <h2 class="text-2xl font-serif font-bold text-coffee-dark inline-block relative">
            <span class="relative z-10">Special Services</span>
            <span class="absolute bottom-0 left-0 w-full h-2 bg-coffee-accent bg-opacity-40 -z-0"></span>
        </h2>
        <p class="text-coffee-medium mt-2">Enhance your stay with our premium offerings</p>
    </div>

    <div class="bg-white rounded-xl shadow-lg border border-coffee-cream overflow-hidden">
        <div class="grid grid-cols-1 md:grid-cols-2 divide-y md:divide-y-0 md:divide-x divide-coffee-cream">
            @foreach (var service in sampleServices.Take(2))
            {
                <div class="p-6 flex">
                    <div class="bg-coffee-cream bg-opacity-30 p-3 rounded-full h-12 w-12 flex items-center justify-center flex-shrink-0">
                        <svg class="h-6 w-6 text-coffee-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                        </svg>
                    </div>
                    <div class="ml-4">
                        <h3 class="text-lg font-serif font-bold text-coffee-dark">@service.Name</h3>
                        <p class="text-coffee-medium mt-2">@service.Description</p>
                        <a href="#" class="inline-block mt-3 text-coffee-accent font-medium hover:text-coffee-dark transition-colors">
                            Learn more →
                        </a>
                    </div>
                </div>
            }
        </div>

        <div class="bg-coffee-cream bg-opacity-5">
            <div class="grid grid-cols-1 md:grid-cols-3 divide-y md:divide-y-0 md:divide-x divide-coffee-cream">
                @foreach (var service in sampleServices.Skip(2))
                {
                    <div class="p-6">
                        <div class="flex items-center mb-3">
                            <div class="mr-3 text-coffee-accent">
                                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                            <h3 class="font-serif font-bold text-coffee-dark">@service.Name</h3>
                        </div>
                        <p class="text-coffee-medium text-sm pl-8">@service.Description</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="mt-12">
        <div class="bg-coffee-dark rounded-xl shadow-lg p-8 text-center">
            <h3 class="text-xl font-serif font-bold text-coffee-cream mb-4">Personalized Service</h3>
            <p class="text-coffee-cream opacity-90 mb-6 max-w-2xl mx-auto">
                Our concierge is available to assist with special requests and custom arrangements to make your stay truly exceptional.
            </p>
            <a href="#" class="inline-block px-6 py-3 bg-coffee-accent text-white rounded-lg hover:bg-coffee-light transition-colors">
                Contact Concierge
            </a>
        </div>
    </div>

    <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-xl shadow-md border border-coffee-cream hover:shadow-lg transition-shadow">
            <div class="flex items-center mb-4">
                <div class="bg-coffee-accent bg-opacity-20 p-2 rounded-lg">
                    <svg class="h-6 w-6 text-coffee-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <h4 class="ml-3 font-serif font-semibold text-coffee-dark">Booking Process</h4>
            </div>
            <p class="text-coffee-medium text-sm">
                Services can be reserved during your room booking or added anytime during your stay. Please allow 24 hours notice for specialized services.
            </p>
        </div>

        <div class="bg-white p-6 rounded-xl shadow-md border border-coffee-cream hover:shadow-lg transition-shadow">
            <div class="flex items-center mb-4">
                <div class="bg-coffee-accent bg-opacity-20 p-2 rounded-lg">
                    <svg class="h-6 w-6 text-coffee-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                    </svg>
                </div>
                <h4 class="ml-3 font-serif font-semibold text-coffee-dark">Payment Options</h4>
            </div>
            <p class="text-coffee-medium text-sm">
                All services can be charged to your room or paid separately. Members of our loyalty program receive special discounts on selected services.
            </p>
        </div>

        <div class="bg-white p-6 rounded-xl shadow-md border border-coffee-cream hover:shadow-lg transition-shadow">
            <div class="flex items-center mb-4">
                <div class="bg-coffee-accent bg-opacity-20 p-2 rounded-lg">
                    <svg class="h-6 w-6 text-coffee-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <h4 class="ml-3 font-serif font-semibold text-coffee-dark">Questions?</h4>
            </div>
            <p class="text-coffee-medium text-sm">
                Our front desk is available 24/7 to assist with any questions about our services. Feel free to call extension 0 from your room.
            </p>
        </div>
    </div>
</div>