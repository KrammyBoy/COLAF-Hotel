@model COLAFHotel.Models.Room
@{
    ViewBag.Title = "Create Room";
}

<div class="flex justify-center items-center min-h-screen p-4">
    <div class="bg-white shadow-lg rounded-2xl p-8 w-full max-w-lg border border-gray-200">
        <h2 class="text-3xl font-bold text-[var(--primary-color)] mb-6 text-center flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 text-[var(--third-color)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M3 6h18M3 14h18M3 18h18" />
            </svg>
            Create Rooms
        </h2>

        <form asp-action="Create" asp-controller="Room" method="post" class="space-y-5">
            <div>
                <label class="block text-gray-600 font-medium mb-1 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-[var(--primary-color)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21h18M9 8h6m-6 4h6m-6 4h6M5 3h14a2 2 0 012 2v16H3V5a2 2 0 012-2z" />
                    </svg>
                    Floor
                </label>
                <select asp-for="Floor" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[var(--primary-color)] transition duration-300 hover:border-[var(--third-color)]">
                    <option value="">Select Floor</option>
                    @for (int i = 1; i <= 5; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
            </div>
            <div>
                <label class="block text-gray-600 font-medium mb-1 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-[var(--primary-color)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m-6-8h6m-6-4h6M4 8h16M4 12h16M4 16h16" />
                    </svg>
                    Room Number
                </label>
                <select asp-for="RoomNumber" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[var(--primary-color)] transition duration-300 hover:border-[var(--third-color)]">
                    <option value="">Select Room</option>
                    @for (int i = 1; i <= 25; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
            </div>

            <div>
                <label class="block text-gray-600 font-medium mb-1 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-[var(--primary-color)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    Category
                </label>
                <select asp-for="Category" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[var(--primary-color)] transition duration-300 hover:border-[var(--third-color)]">
                    <option value="">Select Category</option>
                    <option value="Deluxe">Deluxe</option>
                    <option value="Standard">Standard</option>
                    <option value="Suite">Suite</option>
                </select>
            </div>

            <div>
                <label class="block text-gray-600 font-medium mb-1 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-[var(--primary-color)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                    Status
                </label>
                <select asp-for="Status" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[var(--primary-color)] transition duration-300 hover:border-[var(--third-color)]">
                    <option value="Occupied">Occupied</option>
                    <option value="Vacant">Vacant</option>
                    <option value="Under Maintenance">Under Maintenance</option>
                </select>
            </div>

            <div>
                <label class="block text-gray-600 font-medium mb-1 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-[var(--primary-color)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                    Image Type
                </label>
                <select asp-for="ImageType" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[var(--primary-color)] transition duration-300 hover:border-[var(--third-color)]">
                    <option value="alpha">Alpha</option>
                    <option value="beta">Beta</option>
                </select>
            </div>
            <input type="hidden" asp-for="ImageUrl" value="/images/default.jpg" />
            <div>
                <label class="block text-gray-600 font-medium mb-1 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-[var(--primary-color)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v8m4-4H8" />
                    </svg>
                    Price
                </label>
                <input type="number" asp-for="Price" min="0" step="0.01" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[var(--primary-color)] transition duration-300 hover:border-[var(--third-color)]" required />
            </div>

            <button type="submit" class="w-full bg-coffee-medium text-white py-3 rounded-lg hover:bg-coffee-dark transition duration-300 flex items-center justify-center gap-2 font-semibold">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Create Room
            </button>
        </form>
    </div>
</div>
