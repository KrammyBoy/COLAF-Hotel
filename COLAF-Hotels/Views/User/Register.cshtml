@model COLAFHotel.Models.User

@{
    ViewBag.Title = "Register";
}

<div class="flex justify-center items-center min-h-screen bg-[var(--fifth-color)]">
    <div class="bg-white shadow-lg rounded-lg p-8 w-96">
        <h2 class="text-2xl font-semibold text-gray-800 text-center">Register</h2>
        <p class="text-gray-600 text-sm text-center">Not a member yet? Join us and register below.</p>

        <form method="post" asp-action="Register" class="mt-4 space-y-4">
            <input type="text" name="username" placeholder="Username" class="w-full p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#D4AF37]" required>

            <div class="flex space-x-2">
                <input type="text" name="firstName" placeholder="First Name" class="w-1/2 p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#D4AF37]" required>
                <input type="text" name="lastName" placeholder="Last Name" class="w-1/2 p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#D4AF37]" required>
            </div>

            <input type="email" name="email" placeholder="Email" class="w-full p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#D4AF37]" required>
            <input type="password" name="password" placeholder="Password" class="w-full p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#D4AF37]" required>
            <input type="password" name="confirmPassword" placeholder="Confirm Password" class="w-full p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#D4AF37]" required>

            <button type="submit" class="w-full bg-[#D4AF37] text-black py-3 rounded-lg font-semibold hover:bg-[#b8962e] transition-all">
                Register Now
            </button>
        </form>

        <p class="mt-4 text-center text-gray-600 text-sm">
            Already have an account?
            <a asp-controller="User" asp-action="Login" class="text-[#D4AF37] hover:underline">Login</a>
        </p>
    </div>
</div>
