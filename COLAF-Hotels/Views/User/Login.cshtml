@{
    ViewBag.Title = "Login";
}

<div class="w-full min-h-screen flex flex-col lg:flex-row items-center justify-between px-4 lg:px-12 overflow-hidden text-white bg-[url('/assets/hotel_assets/hotel-home.jpg')] bg-cover bg-center">

    <!-- Left Section (Key Phrases, Reviews, CTA) -->
    <div class="relative w-full lg:w-1/2 space-y-6 mt-12 lg:mt-0">
        <h1 class="text-4xl lg:text-6xl font-bold font-monospace text-white drop-shadow-lg animate-fade-in text-center lg:text-left">
            Experience Luxury & Comfort
        </h1>
        <p class="text-lg text-gray-100 max-w-lg animate-fade-in delay-200 text-center lg:text-left">
            Discover world-class hospitality, premium rooms, and an unforgettable stay.
        </p>

        <!-- Reviews -->
        <div class="flex flex-col lg:flex-row items-center space-y-4 lg:space-y-0 lg:space-x-4 animate-slide-in-left delay-400">
            <div class="flex space-x-1">
                <!-- SVG Stars (5-Star Rating) -->
                @for (int i = 0; i < 5; i++)
                {
                    <svg class="w-6 h-6 lg:w-8 lg:h-8 text-[#FFD700]" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 1l2.4 6.9h7.2l-5.8 4.2 2.2 6.9L10 14.8l-5.8 4.2 2.2-6.9-5.8-4.2h7.2L10 1z"></path>
                    </svg>
                }
            </div>
            <p class="text-xl lg:text-2xl font-semibold text-gray-200 text-center lg:text-left">Rated 4.9/5 by thousands of happy guests</p>
        </div>

        <!-- Call to Action - "Book Now" Moved Below -->
        <div class="mt-6 flex justify-center lg:justify-start animate-fade-in delay-600">
            <a href=""
               class="bg-[#D4AF37] text-black px-6 py-2 lg:px-8 lg:py-3 rounded-lg text-lg lg:text-xl font-semibold shadow-lg hover:bg-[#b8962e] hover:scale-105 transition-all animate-pulse">
                Book Now
            </a>
        </div>
    </div>

    <!-- Right Section (Register/Login) -->
    <div class="relative w-full lg:w-1/2 flex flex-col items-center space-y-6 mt-12 lg:mt-0 animate-fade-in delay-400">
        <h2 class="text-3xl lg:text-4xl font-bold text-white text-center">Join Our Exclusive Club</h2>
        <p class="text-lg text-gray-300 max-w-md text-center">
            Register now for exclusive discounts and priority bookings.
        </p>
        <div id="backgroundForm" class="relative w-full max-w-md bg-white/20 h-auto backdrop-blur-md p-6 rounded-lg shadow-lg transition-all">
            <!-- Register Form (Default) -->
            @if (ViewBag.Error != null)
            {
                <div id="error-alert" class="relative transform bg-red-600 text-white p-2 rounded-lg shadow-lg flex items-center justify-between w-[100%] max-w-md animate-fade-in">
                    <div class="flex items-center space-x-2">
                        <!-- Error Icon -->
                        <svg class="w-6 h-6 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.721-1.36 3.486 0l6.519 11.591c.763 1.36-.191 3.047-1.743 3.047H3.48c-1.552 0-2.506-1.687-1.743-3.047l6.52-11.591zM11 14a1 1 0 11-2 0 1 1 0 012 0zm-.25-7a.75.75 0 00-1.5 0v4.5a.75.75 0 001.5 0V7z" clip-rule="evenodd" />
                        </svg>
                        <span class="text-sm font-medium">@ViewBag.Error</span>
                    </div>
                    <!-- Close Button -->
                    <button onclick="document.getElementById('error-alert').remove();" class="ml-4 focus:outline-none">
                        <svg class="w-5 h-5 text-white hover:text-gray-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 8.586L5.707 4.293a1 1 0 00-1.414 1.414L8.586 10l-4.293 4.293a1 1 0 001.414 1.414L10 11.414l4.293 4.293a1 1 0 001.414-1.414L11.414 10l4.293-4.293a1 1 0 00-1.414-1.414L10 8.586z" clip-rule="evenodd" />
                        </svg>
                    </button>
                </div>
            }

            <div id="registerForm" class="absolute inset-0 p-6 rounded-lg shadow-lg transition-opacity duration-300 ease-in-out opacity-0 pointer-events-none">
                <h3 class="text-2xl font-semibold text-white">Register</h3>
                <p class="text-gray-100 text-sm">Not a member yet? Join us and register.</p>
                <form method="post" asp-action="RegisterUser" asp-controller="User" class="mt-4 space-y-4 text-[var(--fourth-color)]">
                    <input type="text" name="username" placeholder="Username" class="w-full p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#D4AF37]">
                    <input type="password" name="password" placeholder="Password" class="w-full p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#D4AF37]">
                    <input type="password" name="confirmPassword" placeholder="Confirm Password" class="w-full p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#D4AF37]">
                    <div class="flex flex-col lg:flex-row space-y-4 lg:space-y-0 lg:space-x-4">
                        <input type="text" name="firstname" placeholder="First Name" class="w-full lg:w-1/2 p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#D4AF37]">
                        <input type="text" name="lastname" placeholder="Last Name" class="w-full lg:w-1/2 p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#D4AF37]">
                    </div>
                    <input type="email" name="email" placeholder="Email" class="w-full p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#D4AF37]">
                    <button type="submit" class="w-full bg-gradient-to-r from-[#D4AF37] to-[#b8962e] text-black py-3 rounded-lg font-semibold shadow-lg transition-all duration-300 ease-in-out hover:bg-[#FFD700] hover:from-[#FFD700] hover:to-[#FFC107] hover:text-black hover:scale-105 hover:shadow-xl">
                        Register Now
                    </button>
                </form>
                <p class="mt-4 text-center text-gray-200 text-sm">
                    Already have an account?
                    <span class="text-[#D4AF37] cursor-pointer hover:underline" onclick="toggleForms(true)">Login</span>
                </p>
            </div>

            <!-- Login Form (Hidden by Default) -->
            <div id="loginForm" class="opacity-100 transition-opacity duration-300">
                <h3 class="text-2xl font-semibold text-white">Login</h3>
                <p class="text-gray-100 text-sm">Already have an account?</p>
                <form method="post" asp-action="Login" asp-controller="User" class="mt-4 space-y-4 text-[var(--fourth-color)]">
                    <input type="text" name="username" placeholder="Username" class="w-full p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#D4AF37]">
                    <input type="password" name="password" placeholder="Password" class="w-full p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#D4AF37]">
                    <button type="submit" class="w-full bg-gradient-to-r from-[#D4AF37] to-[#b8962e] text-black py-3 rounded-lg font-semibold shadow-lg transition-all duration-300 ease-in-out hover:bg-[#FFD700] hover:from-[#FFD700] hover:to-[#FFC107] hover:text-black hover:scale-105 hover:shadow-xl">
                        Login
                    </button>
                </form>
                <p class="mt-4 text-center text-gray-200 text-sm">
                    Not a member yet?
                    <span class="text-[#D4AF37] cursor-pointer hover:underline" onclick="toggleForms(false)">Join us and register</span>
                </p>
            </div>
        </div>
    </div>
    <script>
        function adjustFormHeight(height) {
            document.getElementById('backgroundForm').style.height = height + 'rem';
        }

        // Example usage: Call this function when switching between login/register forms
        function toggleForms(showLogin) {
            const registerForm = document.getElementById('registerForm');
            const loginForm = document.getElementById('loginForm');

            if (showLogin) {
                adjustFormHeight(20); // Set height for login form
                registerForm.style.opacity = '0';
                registerForm.style.pointerEvents = 'none';
                loginForm.style.opacity = '1';
                loginForm.style.pointerEvents = 'auto';
            } else {
                adjustFormHeight(32); // Increase height for register form
                registerForm.style.opacity = '1';
                registerForm.style.pointerEvents = 'auto';
                loginForm.style.opacity = '0';
                loginForm.style.pointerEvents = 'none';
            }
        }

        // Ensure proper initial state
        document.addEventListener('DOMContentLoaded', () => {
            document.getElementById('registerForm').style.opacity = '0';
            document.getElementById('registerForm').style.pointerEvents = 'none';
            document.getElementById('loginForm').style.opacity = '1';
            document.getElementById('loginForm').style.pointerEvents = 'auto';
        });
    </script>
</div>