@{
    ViewBag.Title = "Login";
}

<div class="w-full min-h-screen flex flex-col lg:flex-row items-center justify-between px-4 lg:px-12 overflow-hidden text-white bg-[url('/assets/hotel_assets/hotel-home.jpg')] bg-cover bg-center relative">
    <!-- Background overlay with coffee theme -->
    <div class="absolute inset-0 bg-coffee-dark bg-opacity-50 backdrop-blur-sm"></div>

    <!-- Left Section (Key Phrases, Reviews, CTA) -->
    <div class="relative w-full lg:w-1/2 space-y-6 mt-12 lg:mt-0 z-10">
        <h1 class="text-4xl lg:text-6xl font-bold font-['Playfair_Display',serif] text-coffee-cream drop-shadow-lg animate-fade-in text-center lg:text-left">
            Experience Luxury <span class="text-coffee-accent">&</span> Comfort
        </h1>
        <p class="text-lg text-coffee-cream max-w-lg animate-fade-in delay-200 text-center lg:text-left">
            Discover world-class hospitality, premium rooms, and an unforgettable stay with a coffee-inspired twist.
        </p>

        <!-- Reviews -->
        <div class="flex flex-col lg:flex-row items-center space-y-4 lg:space-y-0 lg:space-x-4 animate-slide-in-left delay-400">
            <div class="flex space-x-1">
                <!-- SVG Stars (5-Star Rating) -->
                @for (int i = 0; i < 5; i++)
                {
                    <svg class="w-6 h-6 lg:w-8 lg:h-8 text-coffee-accent" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 1l2.4 6.9h7.2l-5.8 4.2 2.2 6.9L10 14.8l-5.8 4.2 2.2-6.9-5.8-4.2h7.2L10 1z"></path>
                    </svg>
                }
            </div>
            <p class="text-xl lg:text-2xl font-semibold text-coffee-cream text-center lg:text-left">Rated 4.9/5 by thousands of happy guests</p>
        </div>

        <!-- Call to Action - Book Now Button -->
        <div class="mt-6 flex justify-center lg:justify-start animate-fade-in delay-600">
            <a href=""
               class="bg-coffee-accent text-coffee-dark px-6 py-2 lg:px-8 lg:py-3 rounded-lg text-lg lg:text-xl font-semibold shadow-lg hover:bg-coffee-light transition-all duration-300 transform hover:scale-105">
                Book Now
            </a>
        </div>
    </div>

    <!-- Right Section (Register/Login) -->
    <div class="relative w-full lg:w-1/2 flex flex-col items-center space-y-6 mt-12 lg:mt-0 animate-fade-in delay-400 z-10">
        <h2 class="text-3xl lg:text-4xl font-bold font-['Playfair_Display',serif] text-coffee-cream text-center">Join Our Exclusive Club</h2>
        <p class="text-lg text-coffee-cream max-w-md text-center">
            Register now for exclusive discounts and priority bookings.
        </p>
        <div id="backgroundForm" class="relative w-full max-w-md bg-coffee-dark/60 h-auto backdrop-blur-md p-6 rounded-lg shadow-lg transition-all border border-coffee-light/20">
            <!-- Error Alert -->
            @if (ViewBag.Error != null)
            {
                <div id="error-alert" class="relative transform bg-red-600 text-white p-2 rounded-lg shadow-lg flex items-center justify-between w-[100%] max-w-md animate-fade-in mb-4">
                    <div class="flex items-center space-x-2">
                        <!-- Error Icon -->
                        <svg class="w-6 h-6 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.721-1.36 3.486 0l6.519 11.591c.763 1.36-.191 3.047-1.743 3.047H3.48c-1.552 0-2.506-1.687-1.743-3.047l6.52-11.591zM11 14a1 1 0 11-2 0 1 1 0 012 0zm-.25-7a.75.75 0 00-1.5 0v4.5a.75.75 0 001.5 0V7z" clip-rule="evenodd" />
                        </svg>
                        <span class="text-sm font-medium">@ViewBag.Error</span>
                    </div>
                    <!-- Close Button -->
                    <button onclick="document.getElementById('error-alert').remove();" class="ml-4 focus:outline-none">
                        <svg class="w-5 h-5 text-white hover:text-gray-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 8.586L5.707 4.293a1 1 0 00-1.414 1.414L8.586 10l-4.293 4.293a1 1 0 001.414 1.414L10 11.414l4.293 4.293a1 1 0 001.414-1.414L11.414 10l4.293-4.293a1 1 0 00-1.414-1.414L10 8.586z" clip-rule="evenodd" />
                        </svg>
                    </button>
                </div>
            }

            <!-- Register Form (Hidden by Default) -->
            <div id="registerForm" class="absolute inset-0 p-6 rounded-lg transition-opacity duration-300 ease-in-out opacity-0 pointer-events-none">
                <h3 class="text-2xl font-semibold text-coffee-cream font-['Playfair_Display',serif]">Register</h3>
                <p class="text-coffee-light text-sm">Not a member yet? Join us and register.</p>
                <form method="post" asp-action="RegisterUser" asp-controller="User" class="mt-4 space-y-4">
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-coffee-light">
                            <i class="fa-solid fa-user"></i>
                        </span>
                        <input type="text" name="username" placeholder="Username" class="w-full p-3 pl-10 bg-white/10 border border-coffee-light/30 rounded-md text-coffee-cream placeholder-coffee-light/70 focus:outline-none focus:ring-2 focus:ring-coffee-accent focus:border-transparent">
                    </div>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-coffee-light">
                            <i class="fa-solid fa-lock"></i>
                        </span>
                        <input type="password" name="password" placeholder="Password" class="w-full p-3 pl-10 bg-white/10 border border-coffee-light/30 rounded-md text-coffee-cream placeholder-coffee-light/70 focus:outline-none focus:ring-2 focus:ring-coffee-accent focus:border-transparent">
                    </div>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-coffee-light">
                            <i class="fa-solid fa-lock"></i>
                        </span>
                        <input type="password" name="confirmPassword" placeholder="Confirm Password" class="w-full p-3 pl-10 bg-white/10 border border-coffee-light/30 rounded-md text-coffee-cream placeholder-coffee-light/70 focus:outline-none focus:ring-2 focus:ring-coffee-accent focus:border-transparent">
                    </div>
                    <div class="flex flex-col lg:flex-row space-y-4 lg:space-y-0 lg:space-x-4">
                        <div class="relative w-full lg:w-1/2">
                            <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-coffee-light">
                                <i class="fa-solid fa-user"></i>
                            </span>
                            <input type="text" name="firstname" placeholder="First Name" class="w-full p-3 pl-10 bg-white/10 border border-coffee-light/30 rounded-md text-coffee-cream placeholder-coffee-light/70 focus:outline-none focus:ring-2 focus:ring-coffee-accent focus:border-transparent">
                        </div>
                        <div class="relative w-full lg:w-1/2">
                            <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-coffee-light">
                                <i class="fa-solid fa-user"></i>
                            </span>
                            <input type="text" name="lastname" placeholder="Last Name" class="w-full p-3 pl-10 bg-white/10 border border-coffee-light/30 rounded-md text-coffee-cream placeholder-coffee-light/70 focus:outline-none focus:ring-2 focus:ring-coffee-accent focus:border-transparent">
                        </div>
                    </div>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-coffee-light">
                            <i class="fa-solid fa-envelope"></i>
                        </span>
                        <input type="email" name="email" placeholder="Email" class="w-full p-3 pl-10 bg-white/10 border border-coffee-light/30 rounded-md text-coffee-cream placeholder-coffee-light/70 focus:outline-none focus:ring-2 focus:ring-coffee-accent focus:border-transparent">
                    </div>
                    <button type="submit" class="w-full bg-coffee-accent text-coffee-dark py-3 rounded-lg font-semibold shadow-lg transition-all duration-300 ease-in-out hover:bg-coffee-light transform hover:scale-105 hover:shadow-xl flex items-center justify-center">
                        <span>Register Now</span>
                        <i class="fa-solid fa-arrow-right ml-2"></i>
                    </button>
                </form>
                <p class="mt-4 text-center text-coffee-cream text-sm">
                    Already have an account?
                    <span class="text-coffee-accent cursor-pointer hover:underline" onclick="toggleForms(true)">Login</span>
                </p>
            </div>

            <!-- Login Form (Visible by Default) -->
            <div id="loginForm" class="opacity-100 transition-opacity duration-300">
                <h3 class="text-2xl font-semibold text-coffee-cream font-['Playfair_Display',serif]">Login</h3>
                <p class="text-coffee-light text-sm">Already have an account?</p>
                <form method="post" asp-action="Login" asp-controller="User" class="mt-4 space-y-4">
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-coffee-light">
                            <i class="fa-solid fa-user"></i>
                        </span>
                        <input type="text" name="username" placeholder="Username" class="w-full p-3 pl-10 bg-white/10 border border-coffee-light/30 rounded-md text-coffee-cream placeholder-coffee-light/70 focus:outline-none focus:ring-2 focus:ring-coffee-accent focus:border-transparent">
                    </div>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-coffee-light">
                            <i class="fa-solid fa-lock"></i>
                        </span>
                        <input type="password" name="password" placeholder="Password" class="w-full p-3 pl-10 bg-white/10 border border-coffee-light/30 rounded-md text-coffee-cream placeholder-coffee-light/70 focus:outline-none focus:ring-2 focus:ring-coffee-accent focus:border-transparent">
                    </div>
                    <button type="submit" class="w-full bg-coffee-accent text-coffee-dark py-3 rounded-lg font-semibold shadow-lg transition-all duration-300 ease-in-out hover:bg-coffee-light transform hover:scale-105 hover:shadow-xl flex items-center justify-center">
                        <span>Login</span>
                        <i class="fa-solid fa-sign-in-alt ml-2"></i>
                    </button>
                </form>
                <p class="mt-4 text-center text-coffee-cream text-sm">
                    Not a member yet?
                    <span class="text-coffee-accent cursor-pointer hover:underline" onclick="toggleForms(false)">Join us and register</span>
                </p>
            </div>
        </div>
        <!-- Coffee cup decoration -->
        <div class="absolute -bottom-10 -right-10 text-coffee-accent opacity-10 transform rotate-12 scale-150 hidden lg:block">
            <i class="fa-solid fa-mug-hot text-9xl"></i>
        </div>
    </div>

    <!-- Coffee beans decoration -->
    <div class="absolute bottom-10 left-10 text-coffee-accent opacity-10 transform rotate-12 hidden lg:block">
        <i class="fa-solid fa-coffee-beans text-6xl"></i>
    </div>

    <script>
        function adjustFormHeight(height) {
            document.getElementById('backgroundForm').style.height = height + 'rem';
        }

        // Example usage: Call this function when switching between login/register forms
        function toggleForms(showLogin) {
            const registerForm = document.getElementById('registerForm');
            const loginForm = document.getElementById('loginForm');

            if (showLogin) {
                adjustFormHeight(20); // Set height for login form
                registerForm.style.opacity = '0';
                registerForm.style.pointerEvents = 'none';
                loginForm.style.opacity = '1';
                loginForm.style.pointerEvents = 'auto';
            } else {
                adjustFormHeight(32); // Increase height for register form
                registerForm.style.opacity = '1';
                registerForm.style.pointerEvents = 'auto';
                loginForm.style.opacity = '0';
                loginForm.style.pointerEvents = 'none';
            }
        }
    </script>
</div>